<%= form_for(snap) do |f| %>
  <% if snap.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(snap.errors.count, "error") %> prohibited this snap from being saved:</h2>

      <ul>
      <% snap.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="panel panel-default">
  <div class="panel-body">
  <div class="form-group">
    
      <%= f.label :title %> 
      <%= f.text_field :title, class: "form-control", placeholder: "Titel" %>
    </div>

    <div class="form-group">
      <%= f.label :description %> 
      <%= f.text_field :description, class: "form-control", placeholder: "Beschreibung" %>
    </div>

    <div class="form-group">
      <%= f.label :link %> 
      <%= f.text_field :link, class: "form-control", placeholder: "Snapname" %>
    </div>

    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
      <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
    </div>



  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
</div>
</div>
<% end %>
