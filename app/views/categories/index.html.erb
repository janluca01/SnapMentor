<h1 align="center">Alle Kategorien</h1>

<div id="snaps" class="transitions-enabled">
  <% @categories.each do |category| %>
    <div class="box panel panel-default">
      <div class="panel-body">
        <%= link_to image_tag(category.image.url(:medium)), category %>
      </div>
      <h3 align="center"><%= link_to category.name, category %></h3>
    </div>

  <% end %>
</div>

