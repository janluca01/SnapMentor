<p id="notice"><%= notice %></p>
<h2 align="center"><%= @category.name %></h1></br>

<div id="snaps" class="transitions-enabled">

  <% @category_snaps.each do |snap| %>
    <div class="box panel panel-default">

      <div class="panel-heading" style="text-align:center">
       <h3> <%= snap.title %> </h3>
      </div>
       <div class="panel-body" style="">
      <%= link_to image_tag(snap.image.url(:medium)), snap %>
     
        <h4><%= snap.description %></h4>
        <p><h5><%= link_to "Adden", "https://www.#{snap.link}" %></h5></p>

        <% if snap.categories.any? %>
          <h6>Kategorien: <%= render snap.categories %></h6>
        <% end %>
        
        <% if snap.admin = current_admin %>
          <div class="actions">
            <%= link_to edit_snap_path(snap) do %>
              <span class="glyphicon glyphicon-pencil"></span>
              Edit
            <% end %>
            <%= link_to snap, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
          </div>
        <% end %>
        
      </div>
    </div>
  <% end %>
    
</div>



